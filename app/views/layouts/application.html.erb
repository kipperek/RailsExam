<!DOCTYPE html>
<html>
<head>
  <title>MyGists</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
   
<nav class="navbar navbar-default" role="navigation">
  <div class="container">
   <div class="navbar-header">
        <a class="navbar-brand" href="/posts" data-toggle="tooltip" title="Home"><span class="glyphicon glyphicon-home"></span></a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
          <li><a href="/gists">Gists</a></li>
      </ul>
      <form class="navbar-form navbar-left" role="search">
        <div class="form-group" data-toggle="tooltip" title="Search">
            <%= text_field_tag :desc, params[:desc],  :class => 'form-control' %>
        </div>
        <span class="glyphicon glyphicon-search"></span>
      </form>

      <ul class="nav navbar-nav navbar-right">
        <%- if(current_user)  %>
          <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%=  current_user.name %> <b class="caret"></b></a>
          <ul class="dropdown-menu">
              <li><%= link_to "Sign out", "/signout" %></li>          
          </ul>
          </li>
        <%- else  %>
          <li class="active"><%= link_to "Sign in with Github", "/auth/github" %></li>
        <%- end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<%= yield %>

</body>
</html>
