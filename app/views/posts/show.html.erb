<div class="container">
<p id="notice"><%= notice %></p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<p>
  <strong>User:</strong>
  <%- if(@post.user) %>
  <%- if(!@post.user.name.blank?) %>
    <%=  @post.user.name %>
  <%- else %>
    <%=  @post.user.nick %>
  <%- end else %>
  		Not specified
  <%- end %>
</p>

    <%= link_to 'Edit', edit_post_path(@post), :class => 'btn btn-warning' %>
    <%= link_to 'Back', posts_path, :class => 'btn btn-primary' %>
</div>
