<div class="col-sm-6 col-md-4">
	<div class="thumbnail">
		<div class="caption">

			  <%= raw Pygments.highlight(gist.snippet.length > 30 ? gist.snippet[0,30] + "..." : gist.snippet, lexer: gist.lang) %>
			  <p><%= gist.lang %></p>
			  <p><%= gist.description %></p>
			  
			  <%= link_to 'Show', gist, :class => 'btn btn-success' %>
			  <%- if(session[:user_id])  %>
				  <%= link_to 'Edit', edit_gist_path(gist), :class => 'btn btn-warning' %>
				  <%= link_to 'Destroy', gist, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %>
			  <%- end %>

		</div>
	</div>
</div>
