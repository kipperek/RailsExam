<div class="container">
<p id="notice"><%= notice %></p>

<p>
  <strong>Snippet:</strong>
  <%= raw Pygments.highlight(@gist.snippet, lexer: @gist.lang) %>
</p>

<p>
  <strong>Lang:</strong>
  <%= @gist.lang %>
</p>
<p>
  <strong>Description:</strong>
  <%= @gist.description %>
</p>


<p>
  <strong>User:</strong>
  <%- if(@gist.user) %>
  <%- if(!@gist.user.name.blank?) %>
  	<%=  @gist.user.name %>
	<%- else %>
	<%=  @gist.user.nick %>
  <%- end else %>
  		Not specified
  <%- end %>
</p>

<%= link_to 'Edit', edit_gist_path(@gist), :class => 'btn btn-warning' %> 
<%= link_to 'Back', gists_path, :class => 'btn btn-info' %>
</div>
